{
	"name": "Seonbi",
	"version": "0.1.0",
	"description": "A browser extension to serve Seonbi's features to your browser.",
	"homepage_url": "https://github.com/moreal/seonbi-ext",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
        "https://twitter.com/*",
        "webRequest"
    ],
	"background": {
		"persistent": false,
		"scripts": [
			"background.ts"
		]
	},
	"content_scripts": [
        {
            "matches": [
                "https://twitter.com/*"
            ],
            "js": [
                "contentscript.ts"
            ],
            "run_at": "document_start",
            "all_frames": false
        }
    ]
}
